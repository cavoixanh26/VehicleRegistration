@using VRP.MVC.Models.BaseDtos;
@model BasePagingResponse

<nav aria-label="Page navigation example">
  <ul class="pagination">
        <li class="page-item @(Model.Page.CurrentPage == 1 ? "disabled": "")">
            <a class="page-link" href="@Url.Action("Index", new BasePagingRequest{Page = Model.Page.CurrentPage - 1})" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
        @for(var i = 1; i <= Model.Page.ToTalPage; i++)
        {
            <li class="page-item @(Model.Page.CurrentPage == i ? "active": "")">
                <a class="page-link" href="@Url.Action("Index", new BasePagingRequest{Page = i})">
                    @i
                </a>
            </li>
        }
        <li class="page-item @(Model.Page.CurrentPage == Model.Page.ToTalPage ? "disabled": "")">
            <a class="page-link" href="@Url.Action("Index", new BasePagingRequest{Page = Model.Page.CurrentPage + 1})" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>